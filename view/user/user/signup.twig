{% extends 'layout/layout' %}
{% block meta %}
    {{ headTitle('Đăng ký').setSeparator(' - ').setAutoEscape(false)|raw }}
    <meta name="description" content="Đăng ký">
    <meta name="keywords" content="Đăng ký">
    <meta property="og:url" content="{{ getCurrentUrl() }}">
    <meta property="og:title" content="Đăng ký">
    <meta property="og:type" content="article">
    <link rel="canonical" href="{{ getCurrentUrl() }}">
{% endblock %}

{% block body %}
    <div class="bodywrap">
        <div class="bg-gray">
            <section class="bread-crumb">
                <div class="container">
                    {% set br = [{'label': translate('Đăng ký'), 'uri': '/user/signup'}] %}
                    {{ render_breadcrumb(br) }}
                </div>
            </section>
            <section class="section">
                <div class="container ">
                    <div class="wrap_background_aside  page_login">
                        <div class="wrap_background_aside">
                            <div class="row">
                                <div class="col-lg-4 col-md-6 col-sm-12 col-12 col-xl-4 offset-xl-4 offset-lg-4 offset-md-3 offset-xl-3">
                                    <div class="page-login pagecustome clearfix">
                                        <div class="wpx">
                                            <h1 class="title_heads a-center"><span>{{ translate('Đăng ký') }}</span></h1>
                                            <span class="block a-center dkm margin-top-10">Đã có tài khoản, đăng nhập <a
                                                        href="/user/signin" class="btn-link-style btn-register">tại đây</a></span>
                                            <div id="login" class="section">
                                                {{ partial('partial/form',{'form':form}) }}
                                                <div class="block social-login--facebooks margin-top-15">
                                                    <p class="a-center">
                                                        {{ translate('Hoặc đăng nhập bằng') }}
                                                    </p>
                                                    <div class="loginBtn-container">
                                                        <a href="/user/fbsignin" class="loginBtn loginBtn--facebook">
                                                            <i class="fa-brands fa-facebook-f"></i> Facebook
                                                        </a>

                                                        <a href="/user/ggsignin" class="loginBtn loginBtn--google">
                                                            <i class="fa-brands fa-google-plus-g"></i> Google
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}